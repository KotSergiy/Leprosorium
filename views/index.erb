<h2>Latest posts:</h2>
<br />
<% @data_db.each do |post| %>
  <p>
    Author: <%= post['author'] %>
    <br>
    <br>
    <%= post['content'] %>
    <br />
    <br />
    Added at <%= post['created_date'] %>
    <br>
    <br>
    <a href="/details/<%= post['id'] %>">Comments</a>
  </p>
  <hr />
<% end %>
